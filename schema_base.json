{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "currency": {
            "type": "object",
            "additionalProperties": false,
            "required": ["amount", "code"],
            "properties": {
                "amount": {"type": "integer"},
                "code": {
                    "type": "string",
                    "enum": ["usd", "eur", "jpy"]
                }
            }
        }
    }
}
